<div class="row">
  <div class="col-md-12 text-center">
    <h1>My Collections</h1>
  </div>
</div>
<div class="row">
  <div class="col-md-4">&nbsp;</div>
  <div class="col-md-4">
<%= link_to "New" , new_collection_path %>
<br><br>
<table>
  <tr>
    <th>Collection</th>
    <th>Type</th>
  <tr/>
<% @all_collections.each do |collection| %>
 <tr>
   <td><%= link_to collection.name , collection_path(collection) %></td>
   <td> <% if (collection.personal == true) and current_user %> 
        Personal
  <% else %>
        Public
  <% end %>
   </td>
  </tr>
<% end %>
   
</table>
  </div>
  <div class="col-md-4">&nbsp;</div>
</div>